{%- style -%}

  /* Wrapper */
  #shopify-section-{{ section.id }} .wl_image-box {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    align-items: center;
    justify-items: center;
    width: 100%;
    min-height: 448px;
    max-width: 1280px;
    justify-content: center;
    gap: 20px;
    padding: 96px 20px;
  }

  /* Text container */
  #shopify-section-{{ section.id }} .wl_image-box_box {
    background: #E9DDC6;
    width: 480px;
    flex-shrink: 0;
    padding: 80px 30px;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 16px;
  }

  /* Typography */
  #shopify-section-{{ section.id }} .wl_image-box_heading,
  #shopify-section-{{ section.id }} .wl_image-box_subheading,
  #shopify-section-{{ section.id }} .wl_image-box_description {
    color: #154734;
    font-family: Sora;
  }

  #shopify-section-{{ section.id }} .wl_image-box_heading     { font-size: 32px; font-weight: 300; line-height: 125%; }
  #shopify-section-{{ section.id }} .wl_image-box_subheading  { font-size: 20px; font-weight: 400; line-height: 130%; }
  #shopify-section-{{ section.id }} .wl_image-box_description { font-size: 16px; font-weight: 300; line-height: 150%; }

  /* Button */
  #shopify-section-{{ section.id }} .wl_image-box_button {
    background: #154734;
    padding: 20px 48px;
    color: #e9ddc6;
    text-align: center;
    font-family: Sora;
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%;
    letter-spacing: 0.32px;
    text-transform: uppercase;
    text-decoration: none;
    margin: 10px auto 0px;
    transition: background 0.3s ease;
    width: fit-content;
  }
  #shopify-section-{{ section.id }} .wl_image-box_button:hover {
    background: #15473480;
}
#shopify-section-{{ section.id }} .m-hide {
      display: none;
    }


  /* Mobile layout */
  @media (max-width: 767px) {
    #shopify-section-{{ section.id }} .wl_image-box {
      min-height: 280px;
      display: flex;
      flex-direction: column;
      padding: 0 20px 40px;
    }
    #shopify-section-{{ section.id }} .wl_image-box_box {
      width: 100%;
      height: auto;
      padding: 40px 36px;
      margin-top: 20px;
    }
    #shopify-section-{{ section.id }} .wl_image-box_heading    { font-size: 24px; }
    #shopify-section-{{ section.id }} .wl_image-box_subheading { font-size: 18px; }
    #shopify-section-{{ section.id }} .d-hide {
      display: none;
    }
    #shopify-section-{{ section.id }} .m-hide {
      display: flex;
    }
  }
{%- endstyle -%}

<div class="wl_image-box">
  <div class="wl_image-box_box m-hide">
    {%- if section.settings.image-box_heading != blank -%}
      <h2 class="wl_image-box_heading">{{ section.settings.image-box_heading }}</h2>
    {%- endif -%}

    {%- if section.settings.image-box_subheading != blank -%}
      <h5 class="wl_image-box_subheading">{{ section.settings.image-box_subheading }}</h5>
    {%- endif -%}

    {%- if section.settings.image-box_description != blank -%}
      <p class="wl_image-box_description">{{ section.settings.image-box_description }}</p>
    {%- endif -%}

    {%- if section.settings.image-box_button_text != blank and section.settings.image-box_button_link != blank -%}
      <a href="{{ section.settings.image-box_button_link }}" class="wl_image-box_button">
        {{ section.settings.image-box_button_text }}
      </a>
    {%- endif -%}
  </div>
</div>
<div class="wl_image-box_box d-hide">
  {%- if section.settings.image-box_heading != blank -%}
    <h2 class="wl_image-box_heading">{{ section.settings.image-box_heading }}</h2>
  {%- endif -%}

  {%- if section.settings.image-box_subheading != blank -%}
    <h5 class="wl_image-box_subheading">{{ section.settings.image-box_subheading }}</h5>
  {%- endif -%}

  {%- if section.settings.image-box_description != blank -%}
    <p class="wl_image-box_description">{{ section.settings.image-box_description }}</p>
  {%- endif -%}

  {%- if section.settings.image-box_button_text != blank and section.settings.image-box_button_link != blank -%}
    <a href="{{ section.settings.image-box_button_link }}" class="wl_image-box_button">
      {{ section.settings.image-box_button_text }}
    </a>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Image Box V2",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image-box_image_picker",
      "label": "Image"
    },
    {
      "type": "textarea",
      "id": "image-box_heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "image-box_subheading",
      "label": "Sub heading"
    },
    {
      "type": "textarea",
      "id": "image-box_description",
      "label": "Description"
    },
    {
      "type": "url",
      "id": "image-box_button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "image-box_button_text",
      "label": "Button text"
    }
  ],
  "presets": [
    {
      "name": "Image Box V2"
    }
  ]
}
{% endschema %}

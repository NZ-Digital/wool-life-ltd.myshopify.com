{%- style -%}
  #shopify-section-{{ section.id }} {
    background-color: #FFF5E5;
    position: relative;
  }  
  #shopify-section-{{ section.id }} .wl_growers-tips-archive {
      display: grid;
      grid-template-columns: repeat(12, 1fr);
      gap: 20px;
      margin: 40px;
      align-items: end;
      justify-items: start;
      width: 100%;
      margin: 0 auto;
      padding: 0px 20px 0px 20px;
      padding-bottom: 96px;
      max-width: 1280px;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_heading-wrapper {
    grid-column: 2 / 12;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_heading {
    color: #154734;
    font-family: Sora;
    font-size: 48px;
    font-style: normal;
    font-weight: 300;
    line-height: 110%; /* 52.8px */
    max-width: 569px;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_description {
    color: #154734;
    font-family: Sora;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 175%; /* 28px */
    max-width: 480px;
    margin-top: 16px;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_btn {
    background: #154734;
    padding: 20px 24px;
    color: #E9DDC6;
    text-align: center;
    font-family: Sora;
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%;
    letter-spacing: 0.32px;
    text-transform: uppercase;
    text-decoration: none;
    transition: background 0.3s ease;
    width: fit-content;
    transition: background 0.3s ease;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_btn:hover {
    background: #15473480;
  }

  #shopify-section-{{ section.id }} .wl_growers-tips-archive_listing {
    grid-column: 2 / 12;
    width: 100%;
    display: grid;
    justify-content: space-between;
    flex-wrap: wrap;
    margin: 0 auto;
    grid-gap: 40px 20px;
    grid-template-columns: repeat(12, 1fr);
    gap: 32px;
    align-items: start;
    justify-items: start;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item {
      grid-column: span 4;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: flex-end;
      color: #154734;
      font-family: Sora;
      font-size: 16px;
      font-style: normal;
      line-height: 175%;
      width: 100%;
      height: 100%;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_content {
    padding: 40px;
    width: 100%;
    height: 100%;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_title-a {
    text-decoration: none;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_title {
    color: var(--Green---Dark, #154734);
    font-family: Sora;
    font-size: 24px;
    font-style: normal;
    font-weight: 300;
    line-height: 125%; /* 30px */
    margin-bottom: 20px;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_title:hover {
      opacity: 0.75;
      cursor: pointer;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_link {
    color: #154734;
    /* CTA */
    font-family: Sora;
    font-size: 12px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%; /* 12px */
    letter-spacing: 0.24px;
    text-transform: uppercase;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_link:hover {
      opacity: 0.75;
  }


  @media (max-width: 1200px) {
    #shopify-section-{{ section.id }} .wl_growers-tips-archive_item {
      grid-column: span 6;
    }
  }

  @media (max-width: 767px) {
    #shopify-section-{{ section.id }} .wl_growers-tips-archive {
      padding: 30px 20px;
    }
    #shopify-section-{{ section.id }} .wl_growers-tips-archive_heading-wrapper {
      grid-column: span 12;
      flex-direction: column;
      gap: 20px;
    }
    #shopify-section-{{ section.id }} .wl_growers-tips-archive_listing {
      grid-column: span 12;
      margin-top: 0px;
      gap: 16px;
    }
    #shopify-section-{{ section.id }} .wl_growers-tips-archive_heading {
        font-size: 40px;
    }
    #shopify-section-{{ section.id }} .wl_growers-tips-archive_item {
      grid-column: span 12;
      /* height: 360px; */
      background-position: center;
    }
    #shopify-section-{{ section.id }} .wl_growers-tips-archive_item .wl_growers-tips-archive_item_content {
      padding: 24px 20px;
    }
    #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_title {
      font-size: 20px;
      color: #E9DDC6;
    }
    #shopify-section-{{ section.id }} .wl_growers-tips-archive_green {
      display: none !important;
    }
    #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_link {
      color: #E9DDC6;
    }
  }


  #shopify-section-{{ section.id }} .wl_growers-tips-archive_img-cont {
    width: 100%;
    position: relative;
    display: flex;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_img-cont_img {
    width: 100%;
    object-fit: cover;
    aspect-ratio: 4 / 3;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_img-cont_quote {
    color: #E9DDC6;
    font-family: Sora;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 125%; /* 12.5px */
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_author {
    color: #E9DDC680;
    font-family: Sora;
    font-size: 12px;
    font-style: normal;
    font-weight: 700;
    line-height: 120%;
    letter-spacing: 0.24px;
    text-transform: uppercase;
    text-decoration: none;
    margin: 0;
    margin-top: 12px;
    transition: opacity 0.3s ease;
}
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_content {
    border: 1px solid #E4D7BB;
    border-top: none;
    padding: 32px;
}
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_title-a {
    text-decoration: none;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_title {
    color: #154734;
    font-family: Sora;
    font-size: 20px;
    font-style: normal;
    font-weight: 300;
    line-height: 110%; /* 22px */
    text-decoration: none;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_title:hover {
    opacity: 0.75;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_content_excerpt {
    margin-top: 16px;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_content_excerpt p {
    font-size: 14px;
    line-height: 150%;
    color: #154734CC;
  }
  #shopify-section-{{ section.id }} .wl_growers-tips-archive_item_link {
    display: block;
    color: #154734;
    font-family: Sora;
    font-size: 12px;
    font-style: normal;
    font-weight: 700;
    line-height: 120%; /* 16px */
    letter-spacing: 0.32px;
    text-transform: uppercase;
    text-decoration: none;
    margin-top: 32px;
  }
  
{%- endstyle -%}

{%- paginate blog.articles by 6 -%}
  <div class="wl_growers-tips-archive" id="growers-tips-archive">
    <div class="wl_growers-tips-archive_listing">
      {%- for article in blog.articles -%}
        <div class="wl_growers-tips-archive_item">
          <div class="wl_growers-tips-archive_img-cont">
            {% if article.image.src %}
              <img class="wl_growers-tips-archive_img-cont_img" src="{{ article.image.src | img_url: '488x488' }}" alt="{{ article.image.alt }}">
            {% endif %}
          </div>
          <div class="wl_growers-tips-archive_item_content">
            <a class="wl_growers-tips-archive_item_title-a" href="{{ article.url }}">
              <h3 class="wl_growers-tips-archive_item_title">{{ article.title }}</h3>
            </a>
            <div class="wl_growers-tips-archive_item_content_excerpt">{{ article.excerpt }}</div>
            <a class="wl_growers-tips-archive_item_link" href="{{ article.url }}">Read more</a>
          </div>
        </div>
      {%- endfor -%}
    </div>


  </div>
     {%- if paginate.pages > 1 -%}
      <div class="wl-load-more">
        <a
          type="button"
          id="wl-load-more"
          class="wl_image-box_button"
          data-next-url="{{ paginate.next.url }}"
          aria-label="Load more articles"
        >
          Load more
        </a>
        <noscript>
          <nav class="wl_growers-tips-pagination">
            {%- if paginate.previous -%}
              <a href="{{ paginate.previous.url }}">&larr; Previous</a>
            {%- endif -%}
            {%- for part in paginate.parts -%}
              {%- if part.is_link -%}
                <a href="{{ part.url }}">{{ part.title }}</a>
              {%- else -%}
                <span>{{ part.title }}</span>
              {%- endif -%}
            {%- endfor -%}
            {%- if paginate.next -%}
              <a href="{{ paginate.next.url }}">Next &rarr;</a>
            {%- endif -%}
          </nav>
        </noscript>
      </div>
    {%- endif -%}
{%- endpaginate -%}



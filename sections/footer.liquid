{%- style -%}
  .wl_footer {
    background-color: #154734;
  }
  .wl_footer_inner {
    display: flex;
    flex-direction: column;
    justify-items: start;
    width: 100%;
    margin: 0 auto;
    padding: 128px 20px 24px 20px;
    max-width: 1280px;
  }

  /* Footer - Top */
  .wl_footer_top {
    width: 100%;
    display: flex;
    justify-content: space-between;
  }
  .wl_footer_logo {
  
  }
  .wl_footer_socials {
    display: flex;
    gap: 20px;
    margin-top: 24px;
  }
  .wl_footer_social-link {
    opacity: 0.5;
    transition: opacity 0.3s ease;
  }
  .wl_footer_social-link:hover {
    opacity: 1;
  }
  .wl_footer_newsletter {
    max-width: 568px;
  }
  .wl_footer_newsletter_heading {
    color: #E9DDC6;
    font-family: Sora;
    font-size: 24px;
    font-style: normal;
    font-weight: 300;
    line-height: 125%; /* 30px */
  }

  /* Footer - Middle */
  .wl_footer_middle {
    grid-column: span 12;
    width: 100%;
    border-top: 1px solid #518246;
    display: grid;
    grid-template-columns: repeat(10, 1fr);
    gap: 40px clamp(0px, 5vw, 64px);
    justify-items: start;
    padding-top: 80px;
    margin-top: 80px;
  }
  .wl_footer_menu-col {
    grid-column: span 2;
    width: 100%;
  }
  .wl_footer_menu-col_heading {
    color: #E9DDC6;
    font-family: Sora;
    font-size: 12px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%; /* 12px */
    letter-spacing: 0.24px;
    text-transform: uppercase;
  }
  .wl_footer_menu-col ul {
    margin-top: 16px;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  .wl_footer_menu-col ul li {
    color: #E9DDC6CC;
    font-family: Sora;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: 125%; /* 21px */
    text-decoration: none;
  }
  .wl_footer_menu-col ul li a {
    color: #E9DDC6CC;
    font-family: Sora;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: 125%; /* 21px */
    text-decoration: none;
  }
  .wl_footer_menu-col ul li a:hover {
    text-decoration: underline;
    cursor: pointer;
  }

  /* Footer - Bottom */
  .wl_footer_bottom {
    width: 100%;
    border-top: 1px solid #518246;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    color: #E9DDC680;
    margin-top: 80px;
    padding-top: 12px;
  }
  .wl_footer_copyright {
    color: #E9DDC680;
    font-family: Sora;
    font-size: 10px;
    font-style: normal;
    font-weight: 400;
    line-height: 100%; /* 10px */
    margin: 0;
  }
  .wl_footer_minor ul {
    list-style: none;
    display: flex;
    gap: 16px;
  }
  .wl_footer_minor ul li {
    color: #E9DDC680;
    text-align: right;
    font-family: Sora;
    font-size: 10px;
    font-style: normal;
    font-weight: 400;
    line-height: 100%; /* 10px */
  } 
  .wl_footer_minor ul li a {
    color: #E9DDC680;
    text-align: right;
    font-family: Sora;
    font-size: 10px;
    font-style: normal;
    font-weight: 400;
    line-height: 100%; /* 10px */
    text-decoration: none;
  } 
  .wl_footer_minor ul li a:hover {
    text-decoration: underline;
  }

  /* newsletter styles */
  .wl_footer_newsletter #mc_embed_shell {
    margin-top: 32px;
  }
  .wl_footer_newsletter #mc_embed_signup_scroll {
    display: flex;
    gap: 8px;
  }
  .wl_footer_newsletter input {
    border: 1px solid #E9DDC6;
    background: transparent;
    height: 48px;
    color: #E9DDC6;
    font-family: Sora;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: 100%;
    padding: 22px 18px;
  }
  .wl_footer_newsletter input::placeholder {
    color: #E9DDC680;
  }
  .wl_footer_newsletter input.email {
    min-width: 300px;
  }
  .wl_footer_newsletter .button {
    background: #E9DDC6;
    height: 48px;
    font-family: Sora;
    padding: 22px 18px;
    color: #154734;
    /* CTA */
    font-size: 12px;
    font-style: normal;
    font-weight: 700;
    line-height: 50%;
    letter-spacing: 0.24px;
    text-transform: uppercase;
    min-width: 192px;
    transition: background 0.3s ease;
    border-color: #E9DDC6;
  }
  .wl_footer_newsletter .button:hover {
    background: #E9DDC680;
    border: 1px solid #849681;
  }



  @media (max-width: 767px) {
    .wl_footer_inner {
      padding-top: 64px;
    }
    .wl_footer_top {
      flex-direction: column;
    }
    .wl_footer_socials {
      margin-top: 12px;
    }
    .wl_footer_newsletter {
      margin-top: 24px;
    }
    .wl_footer_newsletter_heading {
      font-size: 16px;
    }
    .wl_footer_middle {
      margin-top: 40px;
      padding-top: 40px;
    }
    .wl_footer_menu-col {
      grid-column: span 10;
    }
    .wl_footer_bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: 12px;
      margin-top: 40px;
    }
    .wl_footer_minor ul {
      flex-wrap: wrap;
      gap: 8px;
    }
    .wl_footer_newsletter #mc_embed_signup_scroll {
      flex-direction: column;
    }
    .wl_footer_newsletter input.email {
        width: 100%;
    }
    .wl_footer_newsletter input.email {
      min-width: unset;
    }
  }

{%- endstyle -%}


{%- style -%}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.text-column_background_color }};
  }
  .wl_text-column {
    display: grid;
    grid-template-columns: repeat(12, 1fr); /* 12 equal columns */
    align-items: center;
    justify-items: center;
    width: 100%;
    margin: 0 auto;
    padding: 96px 20px;
    min-height: 320px;
    max-width: 1280px;
  }
  .wl_text-column_inner {
    grid-column: 1 / -1;
    display: flex;
    max-width: 794px;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .wl_text-column_text {
    color: {{ section.settings.text-column_text_color }};
    text-align: center;
    font-family: Sora;
    font-size: 24px;
    font-style: normal;
    font-weight: 400;
    line-height: 175%; /* 42px */
  }
  .wl_text-column_text span {
    font-weight: 700;
  }
  .wl_text-column_btn {
    background: var(--Green---Dark, #154734);
    padding: 20px 64px;
    color: var(--Beige, #E9DDC6);
    text-align: center;
    font-family: Sora;
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%;
    letter-spacing: 0.32px;
    text-transform: uppercase;
    text-decoration: none;
    margin-top: 64px;
    transition: background 0.3s ease;
  }
  .wl_text-column_btn:hover {
      background: #15473480;
  }

  @media (max-width: 767px) {
    .wl_text-column {
      padding: 40px 20px;
    }
    .wl_text-column_text {
      font-size: 14px;
    }
    .wl_text-column_btn {
      margin-top: 32px;
      font-size: 14px;
      padding: 20px 48px;
    }
  }
{%- endstyle -%}


<div class="wl_text-column">
  <div class="wl_text-column_inner">
    <p class="wl_text-column_text">{{ section.settings.text-column_text }}</p>
    {% if section.settings.text-column_btn-link and section.settings.text-column_btn-text %}
    <a class="wl_text-column_btn" href="{{ section.settings.text-column_btn-link }}">{{ section.settings.text-column_btn-text }}</a>
      {% endif %}
  </div>
</div>


{% schema %}
{
  "name": "Text Column",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "textarea",
      "id": "text-column_text",
     "label": "Text",
    },
        {
        "type": "select",
        "id": "text-column_text_color",
        "label": "Text Color",
        "options": [
          {
            "value": "#154734",
            "label": "Green - Dark"
          },   
          {
            "value": "#E9DDC6",
            "label": "Beige"
          } 
        ],
        "default": "#154734"
      },
        {
        "type": "select",
        "id": "text-column_background_color",
        "label": "Background Color",
        "options": [
          {
            "value": "#E9DDC6",
            "label": "Beige"
          },    
          {
            "value": "#154734",
            "label": "Green - Dark"
          },
          {
            "value": "#FFF5E5",
            "label": "Beige - Light"
          }    
        ],
        "default": "#E9DDC6"
      },
      {
        "type": "text",
        "id": "text-column_btn-text",
       "label": "Button Text",
      },
        {
        "type": "text",
        "id": "text-column_btn-link",
       "label": "Button Link",
      }
  ],
  "presets": [
    {
      "name": "Text Column"
    }
  ]
}
{% endschema %}

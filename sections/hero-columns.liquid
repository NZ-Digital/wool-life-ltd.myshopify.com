{%- style -%}
  #shopify-section-{{ section.id }} {
    position: relative;
    z-index: 1;
  }

  .wl_hero-columns {
    display: flex;
    flex-direction: row;
  }
  .wl_hero-columns_content-col {
    width: 50%;
    min-height: 600px;
    display: flex;
    background-color: {{ section.settings.hero-columns_background_color }};
    padding: 96px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    align-items: flex-end;
    min-height: 600px;
    height: fit-content;
  }
  .wl_hero-columns_content-col_inner {
    display: flex;
    gap: 24px;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    max-width: 420px;
  }
  .wl_hero-columns_subheading {
    color: #E9DDC6;
    font-family: Sora;
    font-size: 12px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%; /* 12px */
    letter-spacing: 0.24px;
    text-transform: uppercase;
    text-decoration: none;
    margin: 0;
  }
  .wl_hero-columns_heading {
    color: #E9DDC6;
    font-family: Sora;
    font-size: 48px;
    font-style: normal;
    font-weight: 300;
    line-height: 110%; /* 52.8px */
  }
  .wl_hero-columns_paragraph {
    color: #E9DDC6CC;
    font-family: Sora;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 175%; /* 28px */
  }
  .wl_hero-columns_img-col {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 48px;
    min-height: 600px;
    width: 50%;
    background-image: url('{{ section.settings.hero-columns_image_picker| image_url }}');
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
  }

  @media (max-width: 1024px) {
    .wl_hero-columns_content-col {
      padding: 48px;
    }
  }
  @media (max-width: 767px) {
    .wl_hero-columns {
      flex-direction: column-reverse;
    }
    .wl_hero-columns_content-col {
      width: 100%;
      min-height: 400px;
      align-items: flex-start;
    }
    .wl_hero-columns_img-col {
      width: 100%;
      min-height: 320px;
    }
    .wl_hero-columns_heading {
      font-size: 32px;
    }
  }

 .wl_newsletter-box {
    display: none;
 }
  .wl_newsletter-box.newsletter-box-show {
    grid-column: 1 / -1;
    display: flex;
    max-width: 352px;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    background: #FFF9EF;
    padding: 40px;
    gap: 20px;
    margin-left: auto;
    margin-right: 40px;
    position: absolute;
    right: 0;
    bottom: -25%;
  }
  .wl_newsletter-box_text {
    color: #154734;
    /* H4 */
    font-family: Sora;
    font-size: 24px;
    font-style: normal;
    font-weight: 300;
    line-height: 125%; /* 30px */
  }
  .wl_newsletter-box_text span {
    font-weight: 700;
  }
  .wl_newsletter-box_link {
    color: #154734;
    /* CTA */
    font-family: Sora;
    font-size: 12px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%; /* 12px */
    letter-spacing: 0.24px;
    text-transform: uppercase;
    text-decoration: none;
    text-algin: left;
    transition: opacity 0.3s ease;
  }
  .wl_newsletter-box_link:hover {
      opacity: 0.75;
  }

  @media (max-width: 767px) {
    .wl_newsletter-box_text {
      font-size: 14px;
    }
    .wl_newsletter-box.newsletter-box-show {
      max-width: 256px;
      padding: 24px;
      gap: 20px;
      position: absolute;
      right: 0;
      bottom: -112px;
    }
    .wl_hero-columns_paragraph {
      font-size: 14px;
    }
  }
{%- endstyle -%}


<div class="wl_hero-columns">
  <div class="wl_hero-columns_content-col">
    <div class="wl_hero-columns_content-col_inner">
      <h6 class="wl_hero-columns_subheading">{{ section.settings.hero-columns_subheading }}</h6>
      <h1 class="wl_hero-columns_heading">{{ section.settings.hero-columns_heading }}</h1>
      <p class="wl_hero-columns_paragraph">{{ section.settings.hero-columns_paragraph }}</p>
    </div>
  </div>
  <div class="wl_hero-columns_img-col">
  </div>
</div>
<div class="wl_newsletter-box {{ section.settings.hero-columns_newsletter-box }}">
    <p class="wl_newsletter-box_text">For the inside track - sign up to our monthly wool.mates newsletter!</p>
    <a class="wl_newsletter-box_link" href="#newsletter">SIGN UP</a>
</div>



{% schema %}
{
  "name": "Hero - Columns",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "hero-columns_image_picker",
     "label": "Image",
    },
    {
      "type": "text",
      "id": "hero-columns_subheading",
     "label": "Subheading",
    },
    {
      "type": "text",
      "id": "hero-columns_heading",
     "label": "Heading",
    },
    {
        "type": "select",
        "id": "hero-columns_heading_color",
        "label": "Heading Color",
        "options": [
          {
            "value": "#154734",
            "label": "Green - Dark"
          },  
          {
            "value": "#E9DDC6",
            "label": "Beige"
          }  
        ],
        "default": "#154734"
      },
      {
        "type": "select",
        "id": "hero-columns_background_color",
        "label": "Background Color",
        "options": [
          {
            "value": "#FFF5E5",
            "label": "Beige - Light"
          },    
          {
            "value": "#154734",
            "label": "Green - Dark"
          },
          {
            "value": "#44693D",
            "label": "Green - Light"
          }
        ],
        "default": "#FFF5E5"
      },
      {
        "type": "textarea",
        "id": "hero-columns_paragraph",
       "label": "Paragraph",
      },
      {
        "type": "select",
        "id": "hero-columns_newsletter-box",
       "label": "Newsletter Box",
        "options": [
          {
            "value": "",
            "label": "Hide"
          },    
          {
            "value": "newsletter-box-show",
            "label": "Show"
          }
        ],
        "default": ""
      }
  ],
  "presets": [
    {
      "name": "Hero - Columns"
    }
  ]
}
{% endschema %}

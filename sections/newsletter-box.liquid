{%- style -%}
  #shopify-section-{{ section.id }} {
    background-color: transparent;
    margin-top: -64px;
  }
  .wl_newsletter-box {
    grid-column: 1 / -1;
    display: flex;
    max-width: 352px;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    background: #FFF9EF;
    padding: 40px;
    gap: 20px;
    margin-left: auto;
    margin-right: 40px;
  }
  .wl_newsletter-box_text {
    color: #154734;
    /* H4 */
    font-family: Sora;
    font-size: 24px;
    font-style: normal;
    font-weight: 300;
    line-height: 125%; /* 30px */
  }
  .wl_newsletter-box_text span {
    font-weight: 700;
  }
  .wl_newsletter-box_link {
    color: #154734;
    /* CTA */
    font-family: Sora;
    font-size: 12px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%; /* 12px */
    letter-spacing: 0.24px;
    text-transform: uppercase;
    text-decoration: none;
    text-algin: left;
    transition: opacity 0.3s ease;
  }
  .wl_newsletter-box_link:hover {
      opacity: 0.75;
  }

  @media (max-width: 767px) {
    .wl_newsletter-box_text {
      font-size: 16px;
    }
    .wl_newsletter-box_link {
      margin-top: 32px;
    }
  }
{%- endstyle -%}


<div class="wl_newsletter-box">
    <p class="wl_newsletter-box_text">{{ section.settings.newsletter-box_text }}</p>
    <a class="wl_newsletter-box_link" href="{{ section.settings.newsletter-box_link-link }}">{{ section.settings.newsletter-box_link-text }}</a>
</div>


{% schema %}
{
  "name": "Newsletter Box",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "textarea",
      "id": "newsletter-box_text",
     "label": "Text",
    },
    {
      "type": "text",
      "id": "newsletter-box_link-text",
     "label": "Link Text",
    },
      {
      "type": "text",
      "id": "newsletter-box_link-link",
     "label": "Link Link",
    }
  ],
  "presets": [
    {
      "name": "Newsletter Box"
    }
  ]
}
{% endschema %}

{%- style -%}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.image-with-content_background_color }};
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  #shopify-section-{{ section.id }} .wl_image-with-content {
    display: flex;
    padding-top: 64px;
    max-width: 1920px;
    width: 100%;
  }
  #shopify-section-{{ section.id }} .wl_image-with-content.image-with-content_image-first {
    flex-direction: row;
  }
  #shopify-section-{{ section.id }} .wl_image-with-content.image-with-content_text-first {
    flex-direction: row-reverse;
  }
  #shopify-section-{{ section.id }} .wl_image-with-content_img-col {
    width: 50%;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    min-height: 510px;
  }
  #shopify-section-{{ section.id }} .wl_image-with-content_content-col {
    width: 50%;
    min-width: 640px;
    background-color: {{ section.settings.image-with-content_background_color }};
    padding: 96px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 24px;
    height: fit-content;
    min-height: 510px;
  }

  /* --- NEW : Pre-heading image --- */
  #shopify-section-{{ section.id }} .wl_image-with-content_preimage {
    height: 70px;
    width: auto;
    object-fit: contain;
  }

  #shopify-section-{{ section.id }} .wl_image-with-content_heading {
    color: {{ section.settings.image-with-content_heading_color }};
    font-family: Sora;
    font-size: 32px;
    font-style: normal;
    font-weight: 300;
    line-height: 110%; /* 35.2px */
    max-width: 448px;
    width: 100%;
  }
  #shopify-section-{{ section.id }} .wl_image-with-content_content {
    color: {{ section.settings.image-with-content_text_color }};
    font-family: Sora;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 175%; /* 28px */
    max-width: 448px;
    width: 100%;
  }

  /* Base link styling (legacy) */
  #shopify-section-{{ section.id }} .wl_image-with-content_content a {
    margin-top: 24px;
    color: {{ section.settings.image-with-content_text_color }};
    font-family: Sora;
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%;
    text-decoration: underline;
    display: block;
    transition: opacity 0.3s ease;
  }
  #shopify-section-{{ section.id }} .wl_image-with-content_content a:hover {
    opacity: 0.75;
  }

  /* --- NEW : Button styling --- */
  #shopify-section-{{ section.id }} .wl_image-with-content_content a.wl_button,
  #shopify-section-{{ section.id }} .wl_image-with-content_content-col > a.wl_button {
    padding: 20px 24px;
    text-align: center;
    font-family: Sora;
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%;
    letter-spacing: 0.32px;
    text-transform: uppercase;
    text-decoration: none !important;
    min-width: fit-content;
    max-width: fit-content;
    margin-top: 48px;
    transition: background 0.3s ease;
  }
  #shopify-section-{{ section.id }} .wl_image-with-content_content a.wl_button-beige,
  #shopify-section-{{ section.id }} .wl_image-with-content_content-col > a.wl_button-beige {
    background: #E9DDC6;
    color: #154734 !important;
  }
  #shopify-section-{{ section.id }} .wl_image-with-content_content a.wl_button-beige:hover,
  #shopify-section-{{ section.id }} .wl_image-with-content_content-col > a.wl_button-beige:hover {
    background: #E9DDC680;
  }

  @media (max-width: 1024px) {
    #shopify-section-{{ section.id }} .wl_image-with-content_content-col {
      padding: 48px;
      min-width: 500px;
    }
  }
  @media (max-width: 767px) {
    #shopify-section-{{ section.id }} .wl_image-with-content {
      padding-top: 0px;
    }
    #shopify-section-{{ section.id }} .wl_image-with-content.image-with-content_image-first,
    #shopify-section-{{ section.id }} .wl_image-with-content.image-with-content_text-first {
      flex-direction: column;
    }
    #shopify-section-{{ section.id }} .wl_image-with-content_content-col {
      width: 100%;
      padding: 60px 20px;
      min-width: unset;
      align-items: flex-start;
      min-height: unset;
    }
    #shopify-section-{{ section.id }} .wl_image-with-content_content {
      max-width: 100%;
      font-size: 14px;
    }
    #shopify-section-{{ section.id }} .wl_image-with-content_img-col {
      width: 100%;
      min-height: 320px;
    }
    #shopify-section-{{ section.id }} .wl_image-with-content_heading {
      font-size: 24px;
    }
    #shopify-section-{{ section.id }} .wl_image-with-content_content a {
      font-size: 14px;
    }
  }
{%- endstyle -%}

<div class="wl_image-with-content {{ section.settings.image-with-content_layout }}" id="{{ section.settings.image-with-content_id }}">
  <div
    class="wl_image-with-content_img-col"
    style="background-image: url('{{ section.settings.image-with-content_image_picker | image_url }}');"
  ></div>

  <div class="wl_image-with-content_content-col">
    {%- if section.settings.preimage != blank -%}
      <img
        src="{{ section.settings.preimage | image_url }}"
        alt="{{ section.settings.image-with-content_heading | escape }}"
        class="wl_image-with-content_preimage"
        height="70"
        loading="lazy"
      >
    {%- endif -%}

    <h2 class="wl_image-with-content_heading">
      {{ section.settings.image-with-content_heading }}
    </h2>

    <p class="wl_image-with-content_content">
      {{ section.settings.image-with-content_text }}
    </p>

    {%- if section.settings.button_link != blank and section.settings.button_name != blank -%}
      <a
        href="{{ section.settings.button_link }}"
        class="wl_button wl_button-beige"
      >
        {{ section.settings.button_name }}
      </a>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Image with Content",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "image-with-content_layout",
      "label": "Layout",
      "default": "image-with-content_image-first",
      "options": [
        {
          "value": "image-with-content_image-first",
          "label": "Image First"
        },
        {
          "value": "image-with-content_text-first",
          "label": "Text First"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "image-with-content_image_picker",
      "label": "Image"
    },

    /* -------- NEW SETTINGS -------- */
    {
      "type": "image_picker",
      "id": "preimage",
      "label": "Pre-heading Image"
    },
    {
      "type": "text",
      "id": "button_name",
      "label": "Button Name"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    /* -------------------------------- */

    {
      "type": "text",
      "id": "image-with-content_heading",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "image-with-content_heading_color",
      "label": "Heading Color",
      "default": "#154734",
      "options": [
        {
          "value": "#154734",
          "label": "Green - Dark"
        },
        {
          "value": "#E9DDC6",
          "label": "Beige"
        }
      ]
    },
    {
      "type": "textarea",
      "id": "image-with-content_text",
      "label": "Text"
    },
    {
      "type": "select",
      "id": "image-with-content_text_color",
      "label": "Text Color",
      "default": "#154734",
      "options": [
        {
          "value": "#154734",
          "label": "Green - Dark"
        },
        {
          "value": "#E9DDC6",
          "label": "Beige"
        },
        {
          "value": "rgba(233, 221, 198, 0.80)",
          "label": "Beige - 80%"
        }
      ]
    },
    {
      "type": "select",
      "id": "image-with-content_background_color",
      "label": "Background Color",
      "default": "#FFF5E5",
      "options": [
        {
          "value": "#FFF5E5",
          "label": "Beige - Light"
        },
        {
          "value": "#154734",
          "label": "Green - Dark"
        }
      ]
    },
    {
      "type": "text",
      "id": "image-with-content_id",
      "label": "Section ID"
    }
  ],
  "presets": [
    {
      "name": "Image with Content"
    }
  ]
}
{% endschema %}

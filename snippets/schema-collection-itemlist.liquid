{% if request.page_type == 'collection' %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": {{ 'Wool.Life - ' | append: collection.title | json }},
  "url": {{ shop.url | append: collection.url | json }},
  "numberOfItems": {{ collection.products_count }},
  "itemListElement": [
    {% for product in collection.products %}
    {
      "@type": "ListItem",
      "position": {{ forloop.index }},
      "item": {
        "@type": "Product",
        "@id": {{ shop.url | append: product.url | append: '#product' | json }},
        "name": {{ product.title | json }},
        "image": {{ product.featured_image | img_url: '800x' | prepend: 'https:' | json }},
        "description": {{ product.description | strip_html | truncate: 300 | json }},
        "brand": {{ shop.name | json }},
        "offers": {
          "@type": "Offer",
          "url": {{ shop.url | append: product.url | json }},
          "priceCurrency": {{ cart.currency.iso_code | json }},
          "price": {{ product.price | divided_by: 100.0 | json }},
          "availability": "https://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}"
        }
      }
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
</script>
{% endif %}
